{
  "manifest_version": 2,

  "name": "grrrit",
  "description": "",
  "version": "0.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "content.html"
  },
  "permissions": ["storage", "webNavigation", "*://gerrit.wikimedia.org/*"],
  "content_scripts": [
    {"matches": ["*://gerrit.wikimedia.org/*"], "js": ["content.js"]}
  ],
  "background": {"scripts": ["background.js"]}
}
