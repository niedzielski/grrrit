{
  "manifest_version": 2,

  "name": "grrrit",
  "description": "",
  "version": "0.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "content.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "*://gerrit.wikimedia.org/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "include_globs": ["*://*.gerrit.*/*", "*://gerrit.*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
